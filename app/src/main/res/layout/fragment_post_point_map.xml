<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="android.view.View" />

        <import type="com.tiparo.tripway.models.Resource" />

        <import type="com.tiparo.tripway.models.Resource.Status" />

        <variable
            name="locationName"
            type="Resource&lt;String>" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.ui.PostPointMapFragment">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:visibility="@{locationName.status == Status.LOADING? View.VISIBLE: View.GONE}" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map_search"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorBars"
            android:elevation="@dimen/bars_elevation" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/colorBars"
            android:padding="@dimen/vertical_margin"
            android:elevation="@dimen/bars_elevation"
            >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text='@{locationName.data, default = "No location was picked"}'
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/saveLocationBtn" />

            <ImageView
                android:id="@+id/saveLocationBtn"
                android:src="@drawable/ic_done"
                android:tint="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:layout_width="32dp"
                android:layout_marginStart="12dp"
                android:layout_height="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>